<!doctype html>
<html lang="es">
<head>

    <!-- meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- css -->
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/all.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web&display=swap" rel="stylesheet">

    <!-- favicon -->
    <link rel="icon" href="{{ website.themeUrl }}/assets/img/favicon.jpeg" />

    <!-- web title -->
    <title>Noticias :: Panel de Administrador - {{ website.title }}</title>

</head>
<body class="bg-light">

    <!-- aside -->
    <div class="container-fluid">
        {% include 'partials/aside.twig' %}
    </div>

    <!-- main content -->
    <main>

        <!-- header -->
        {% include 'partials/header.twig' %}

        <section class="mx-auto col-sm-10 bg-white shadow-sm mt-4 p-3">
            <h2 class="border-bottom pb-2">Agregar nueva noticia</h2>
            <form method="post" action="{{ website.url }}/ajax/administrator/news/add">
                <div class="form-row">
                    <div class="form-group col">
                        <label for="title"><i class="fas fa-align-justify"></i> Título:</label>
                        <input type="text" class="form-control" name="title" id="title" required>
                    </div>
                    <div class="form-group col">
                        <label for="image"><i class="fas fa-link"></i> Portada:</label>
                        <select class="form-control" name="image" id="image">
                            <option></option>
                            {% for file in gallery %}
                            <option value="{{ file.url }}">{{ file.name }} - {{ file.description }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="description"><i class="fas fa-align-justify"></i> Descripción <small>(se permite HTML)</small>:</label>
                        <textarea class="form-control" name="description" id="description" required></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="buttonTitle"><i class="fas fa-align-justify"></i> Texto botón:</label>
                        <input type="text" class="form-control" name="buttonTitle" id="buttonTitle" required>
                    </div>
                    <div class="form-group col">
                        <label for="url"><i class="fas fa-align-justify"></i> Enlace botón:</label>
                        <input type="text" class="form-control" name="url" id="url" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">Guardar</button>
            </form>
        </section>

        <section class="mx-auto col-sm-10 bg-white shadow-sm mt-4 p-3">
            <h2 class="border-bottom pb-2">Listado noticias</h2>
            <table class="table table-sm table-hover table-light">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Portada</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articleList %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.image }}</td>
                        <td>{{ article.title }}</td>
                        <td>{{ article.description }}</td>
                        <td>
                            <form method="post" action="#">
                                <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">No se han encontrado noticias</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>

        <!-- footer -->
        {% include 'partials/footer.twig' %}

    </main>

    <!-- javascript -->
    <script src="{{ website.themeUrl }}/assets/js/jquery-3.4.1.slim.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/popper.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/bootstrap.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/main.js"></script>

</body>
</html>