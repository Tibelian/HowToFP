<!doctype html>
<html lang="es">
<head>

    <!-- meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- css -->
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/all.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web&display=swap" rel="stylesheet">

    <!-- favicon -->
    <link rel="icon" href="{{ website.themeUrl }}/assets/img/favicon.jpeg" />

    <!-- web title -->
    <title>Archivos subidos :: Panel de Administrador - {{ website.title }}</title>

</head>
<body class="bg-light">

    <!-- aside -->
    <div class="container-fluid">
        {% include 'partials/aside.twig' %}
    </div>

    <!-- main content -->
    <main>

        <!-- header -->
        {% include 'partials/header.twig' %}

        <section class="mx-auto col-sm-10 bg-white shadow-sm mt-4 p-3">
            <h2 class="border-bottom pb-2">Subir archivo al servidor</h2>
            <form method="post" action="{{ website.url }}/ajax/administrator/uploads/add" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col">
                        <label for="description"><i class="fas fa-align-justify"></i> Descripción archivo:</label>
                        <input type="text" class="form-control" name="description" id="description" required>
                    </div>
                    <div class="form-group col">
                        <label for="file"><i class="fas fa-file"></i> Archivo <small>(Formatos permitidos: png, jpg, jpeg, pdf)</small>:</label>
                        <input type="file" class="w-100 p-1" name="file" id="file" value="{{ website.url }}">
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">Subir</button>
            </form>
        </section>

        <section class="mx-auto col-sm-10 bg-white shadow-sm mt-4 p-3">
            <h2 class="border-bottom pb-2">Archivos subidos al servidor</h2>
            <div class="row">
                {% for file in fileList %}

                <div class="col-md-6 border upload-file">
                    <img src="{{ website.url }}/{{  file.path }}" width="100px">
                    <p>Título: <strong>{{  file.basename }}</strong></p>
                    <p>Tamaño: <strong>{{  file.size }} bytes</strong></p>
                    <p>Descripción: <strong>{{  file.description }}</strong></p>
                    <form method="post" action="{{ website.url }}/ajax/administrator/uploads/delete">
                        <input type="hidden" name="id" value="{{ file.id }}">
                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar archivo"><i class="fas fa-trash"></i></button>
                    </form>
                </div>

                {% else %}

                <div class="col-12">No se han encontrado archivos</div>

                {% endfor %}
            </div>
        </section>

        <!-- footer -->
        {% include 'partials/footer.twig' %}

    </main>

    <!-- javascript -->
    <script src="{{ website.themeUrl }}/assets/js/jquery-3.4.1.slim.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/popper.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/bootstrap.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/main.js"></script>

</body>
</html>