<!doctype html>
<html lang="es">
<head>

    <!-- meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- css -->
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/all.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/animate.min.css">
    <link rel="stylesheet" href="{{ website.themeUrl }}/assets/css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web&display=swap" rel="stylesheet">

    <!-- favicon -->
    <link rel="icon" href="{{ website.themeUrl }}/assets/img/schoolarmy.jpeg" />

    <!-- web title -->
    <title>HowToFp aka SchoolArmy</title>

</head>
<body class="bg-light">

    <!-- header -->
    <div class="container-fluid">
        {% include 'partials/header.twig' %}
    </div>
    
    <!-- main content -->
    <div class="container-fluid">

        <div class="row bg-white py-5 shadow-sm">
            <div class="container animate__animated animate__fadeInLeft">
                

            </div>
        </div>

        <div class="row py-3 mt-3">
            <div class="container animate__animated animate__fadeInRight">
                <div class="row bg-white p-3 justify-content-center text-center shadow-sm rounded">
                    <div class="col-lg-4 col-sm-12">
                        <i class="fas fa-map text-center display-4 text-danger"></i>
                        <h6 class="my-2 font-weight-bold">Ubicación</h6>
                        <p class="small mb-0 text-secondary">Avenida de Castilla-La Mancha, 60. 02630, La Roda (Albacete)</p>
                    </div>
                    <div class="col-lg-4 col-sm-12">
                        <i class="fas fa-envelope text-center display-4 text-danger"></i>
                        <h6 class="my-2 font-weight-bold">Email</h6>
                        <p class="small mb-0 text-secondary">soporte@howtofp.com</p>
                    </div>
                    <div class="col-lg-4 col-sm-12">
                        <i class="fas fa-phone text-center display-4 text-danger"></i>
                        <h6 class="my-2 font-weight-bold">Teléfono</h6>
                        <p class="small mb-0 text-secondary">111 11 11 11</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5 pt-3">
            <div class="container animate__animated animate__fadeInLeft">
                <div class="row bg-white p-3 shadow-sm rounded">
                
                    <div class="col-sm-5 mb-4 mb-sm-0">
                        <h3>Formulario de contacto:</h3>
                        <p class="mb-4 small">ASDF</p>
                        <form method="post" action="#">
                            <div class="form-row">
                                <div class="form-group col">
                                    <label for="contactoNombre">Nombre:</label>
                                    <input type="text" class="form-control" id="contactoNombre">
                                </div>
                                <div class="form-group col">
                                    <label for="contactoAsunto">Asunto:</label>
                                    <input type="text" class="form-control" id="contactoAsunto">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="contactoEmail">Correo electrónico:</label>
                                <input type="email" class="form-control" id="contactoEmail">
                            </div>
                            <div class="form-group">
                                <label for="contactoMensaje">Mensaje:</label>
                                <textarea class="form-control" id="contactoMensaje" rows="4"></textarea>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="contactoTerminos" required>
                                <label class="form-check-label" for="contactoTerminos">He leído y acepto la política de privacidad</label>
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Enviar</button>
                        </form>
                    </div>

                    <div class="col-sm-7">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3091.80041137218!2d-2.152058690823749!3d39.20198368035275!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd66361979cd6a1b%3A0x11ceca8c1299614e!2sAv.%20Castilla%20la%20Mancha%2C%2060%2C%2002630%20La%20Roda%2C%20Albacete!5e0!3m2!1ses!2ses!4v1608065966791!5m2!1ses!2ses" width="100%" height="100%" frameborder="0" style="border:0;min-height:300px;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <!-- footer -->
    <div class="container-fluid mt-auto">
        {% include 'partials/footer.twig' %}
    </div>

    <!-- javascript -->
    <script src="{{ website.themeUrl }}/assets/js/jquery-3.4.1.slim.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/popper.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/bootstrap.min.js"></script>
    <script src="{{ website.themeUrl }}/assets/js/main.js"></script>

</body>
</html>